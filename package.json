{
	"name": "tbcp-web-application",
	"version": "0.0.1",
	"license": "AGPL-3.0",
	"private": true,
	"readme": "https://gitlab.com/the-bootcamp-project/frameworks/web-application/-/blob/main/README.md",
	"description": "How to Build and Publish Modern Web Application with Svelte TailwindCSS TypeScript and Webpack",
	"keywords": [
		"Modern",
		"Web",
		"Application",
		"Framework",
		"TypeScript",
		"ESLint",
		"Prettier",
		"Jest",
		"Svelte",
		"Tailwind CSS",
		"Webpack",
		"TBCP"
	],
	"homepage": "https://gitlab.com/the-bootcamp-project/frameworks/web-application",
	"repository": "https://gitlab.com/the-bootcamp-project/frameworks/web-application.git",
	"bugs": {
		"url": "https://gitlab.com/the-bootcamp-project/frameworks/web-application/-/issues",
		"email": "contributors@bootcamp-project.com"
	},
	"author": "Bootcamp contributors <contributors@bootcamp-project.com>",
	"maintainers": [
		"Bootcamp contributors <contributors@bootcamp-project.com>",
		"John Ollhorn <john@ollhorn.de> (https://ollhorn.de)"
	],
	"contributors": [
		"John Ollhorn <john@ollhorn.de> (https://ollhorn.de)"
	],
	"browserslist": [
		"defaults"
	],
	"main": "./build/index.js",
	"scripts": {
		"cleaning": "********************************************************************************************************",
		"clean:cache": "yarn cache clean",
		"clean": "rm -rf node_modules build dist artifacts temp coverage yarn.lock yarn*.log stats.json",
		"installation": "****************************************************************************************************",
		"git:sub:docs": "git submodule add -b main --name documentation https://gitlab.com/the-bootcamp-project/frameworks/docs.git docs",
		"git:sub:i18n": "git submodule add -b main --name i18n https://gitlab.com/the-bootcamp-project/libraries/i18n.git i18n",
		"git:sub:update": "git submodule update --init --recursive --remote --merge",
		"develop": "*********************************************************************************************************",
		"dev": "webpack serve --node-env development --mode development --hot --open",
		"linting": "*********************************************************************************************************",
		"prelint": "yarn run lint:format && yarn run lint:svelte",
		"lint:format": "prettier --write ./src/**/*.{js,svelte,html,ts}",
		"lint:svelte": "svelte-check --workspace ./ --ignore \"build,tests,docs,i18n\" --diagnostic-sources \"svelte\" --tsconfig ./tsconfig.json",
		"lint:fix": "yarn run lint --fix && yarn run lint:format",
		"lint": "eslint './src/**/*.{js,ts,svelte}'",
		"testing": "*********************************************************************************************************",
		"test:smoke": "http-server -o ./build/index.html",
		"test:webpack": "webpack configtest",
		"test:coverage": "yarn run test:unit --coverage",
		"test:unit": "jest",
		"building": "********************************************************************************************************",
		"xxxprebuild": "yarn run lint:fix && yarn run build:tailwing",
		"build": "webpack --node-env production --mode production --no-hot --no-watch",
		"build:tailwind": "tailwindcss build -i src/tailwind.css -o src/assets/tailwind.css",
		"build:stats": "webpack --node-env production --mode production --profil --json > stats.json && webpack-bundle-analyzer stats.json",
		"versioning": "******************************************************************************************************",
		"version.major": "yarn version --major --no-git-tag-version",
		"version.minor": "yarn version --minor --no-git-tag-version",
		"version.patch": "yarn version --patch --no-git-tag-version"
	},
	"dependencies": {
		"@bootcamp-project/postcss-config": "latest",
		"@bootcamp-project/svelte-config": "latest",
		"@bootcamp-project/sveltelizer": "^1.2.1",
		"@bootcamp-project/tailwind-config": "latest",
		"tailwindcss": "^3.0.8"
	},
	"devDependencies": {
		"@bootcamp-project/eslinttier": "latest",
		"@bootcamp-project/typescript-config": "latest",
		"@bootcamp-project/webpack-config": "latest",
		"@types/mini-css-extract-plugin": "^2.4.0",
		"autoprefixer": "^10.4.0",
		"css-loader": "^6.5.1",
		"eslint": "^8.5.0",
		"fork-ts-checker-webpack-plugin": "^6.5.0",
		"http-server": "^14.0.0",
		"mini-css-extract-plugin": "^2.4.5",
		"postcss": "^8.4.5",
		"postcss-loader": "^6.2.1",
		"postcss-nested": "^5.0.6",
		"prettier": "^2.5.1",
		"style-loader": "^3.3.1",
		"svelte": "^3.44.3",
		"svelte-loader": "^3.1.2",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.4",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1",
		"webpack-merge": "^5.8.0"
	}
}
