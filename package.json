	"license": "AGPL-3.0",
	"private": true,
	"readme": "https://gitlab.com/the-bootcamp-project/frameworks/web-application/-/blob/main/README.md",
	"description": "Framework for a modern Web Application, with TypeScript, Svelte, TailwindCSS and Webpack",
	"keywords": [
		"How to", "Build", "Publish", "Modern",
		"WebApp", "Web Application",
		"Svelte", "TailwindCSS", "TypeScript", "Webpack",
		"Boilerplate", "Step-by-Step"
	],
	"homepage": "https://gitlab.com/the-bootcamp-project/frameworks/web-application",
	"repository": "https://gitlab.com/the-bootcamp-project/frameworks/web-application.git",
	"bugs": {
		"url": "https://gitlab.com/the-bootcamp-project/frameworks/web-application/-/issues",
		"email": "contributors@bootcamp-project.com"
	},
	"author": "Bootcamp contributors <contributors@bootcamp-project.com>",
	"maintainers": [
		"Bootcamp contributors <contributors@bootcamp-project.com>",
		"John Ollhorn <john@ollhorn.de> (https://ollhorn.de)"
	],
	"contributors": [
		"John Ollhorn <john@ollhorn.de> (https://ollhorn.de)"
	],
	"browserslist": [
		"defaults"
	],
	"main": "./build/index.js",
	"scripts": {
		"clean": "rimraf ./node_modules build dist artifacts yarn.lock",
		"pre:submodules:docs": "git submodule add -b main --name documentation https://gitlab.com/the-bootcamp-project/frameworks/docs.git docs",
		"pre:submodules:i18n": "git submodule add -b main --name i18n https://gitlab.com/the-bootcamp-project/libraries/i18n.git i18n",
		"pre:submodules:init": "git submodule update --init",
		"pre:submodules:merge": "git submodule update --recursive --remote --merge",
		"preinstall": "yarn run clean",
		"dev": "webpack serve --node-env development --mode development --config webpack.webapp.ts",
		"********": "--------------------------------------------------------------------------------------------------------------",
		"bundle": "webpack --node-env production --mode production --config webpack.webapp.ts --progress --no-hot --no-watch",
		"*******": "--------------------------------------------------------------------------------------------------------------",
		"measure-bundle": "webpack --node-env production --mode production --config webpack.webapp.ts --progress --no-hot --no-watch --profile --json > stats.json && webpack-bundle-analyzer stats.json",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
